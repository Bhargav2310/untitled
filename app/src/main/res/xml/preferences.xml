<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <PreferenceCategory android:title="General">
    <SwitchPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_baseline_dark_mode_24"
        android:key="darkMode"
        android:summary="On"
        android:title="Dark mode" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Privacy">
    <SwitchPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_baseline_lock_24"
        android:key="bioAuth"
        android:summary="Disabled"
        android:title="Fingerprint lock" />
    </PreferenceCategory>


    <PreferenceCategory android:title="Remote Settings">
        <EditTextPreference
            android:summary="10"
            android:title="Number of Sprinkler"
            android:key="noOfSprinkler"
            android:icon="@drawable/ic_baseline_shower_24"/>

        <EditTextPreference
            android:summary="2"
            android:title="Number of Pumps"
            android:key="noOfPumps"
            android:icon="@drawable/ic_baseline_shower_24"/>

        <EditTextPreference
            android:summary="2"
            android:title="Number of Solenoid Valve"
            android:key="noOfValve"
            android:icon="@drawable/ic_baseline_shower_24"/>


    </PreferenceCategory>
    <PreferenceCategory android:title="Exit">
    <Preference
        android:key="logout"
        android:icon="@drawable/ic_baseline_logout_24"
        android:summary="Log out of app"
        android:title="Logout" />
    </PreferenceCategory>


</PreferenceScreen>